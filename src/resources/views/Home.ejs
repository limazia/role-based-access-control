<%- include('partials/header.ejs') %>
  <div class="container-fluid chat-box">
    <div class="row h-100 clearmp">
      <div class="col-md-3 clearmp">
        <div class="card card-profile">
          <div class="card-header">
            <img src="/assets/images/logo-icon.png" class="img-fluid mr-1" />
            <h3 class="logo-title">
              <%= PAGE_TITLE %>
            </h3>
          </div>
          <div class="card-body mt-4">
            <%- include('layouts/rooms.ejs') %> 
          </div>
          <div class="card-footer">
            <div class="d-flex flex-row align-items-center">
              <div class="invite-user-photo">
                <img src="<%= session.avatar %>" alt="<%= session.username %>">
              </div>
              <div class="ms-2">
                <h6 class="mb-0" id="name"><%= session.username %></h6>
                <small class="text-muted badge-role vip">#<%= session.discriminator %></small>
              </div>
            </div>
            <div class="user-options">
              <a href="#"><i class="fas fa-cog"></i></a>
              <a href="/logout" class="logout"><i class="fas fa-sign-out-alt"></i></a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-9 clearmp">
        <div class="card card-chat-landing">
          <div class="card-body">
            <div class="welcome">
              <img src="assets/images/bg-landing-chat.svg" onload="SVGInject(this)" class="img-fluid">
              <span>Bem-vindo ao <b class="logo"><%= PAGE_TITLE %></b>.</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('partials/footer.ejs') %>