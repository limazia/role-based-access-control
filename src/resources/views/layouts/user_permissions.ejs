            <% if(session.role && session.role_permissions){ %>
            <div class="dropdown show dropleft">
              <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown">
                <i class="fal fa-ellipsis-v"></i>
              </a>
              <div class="dropdown-menu">
                <% if(session.role_permissions.some((permission) => ["invite_people"].indexOf(permission) >= 0)){ %>
                <a class="dropdown-item" href="#"><i class="fas fa-user-plus mr-1"></i> Convidar pessoas</a>
                <% } %>
                <% if(session.role_permissions.some((permission) => ["add_admin"].indexOf(permission) >= 0)){ %>
                <a class="dropdown-item" href="#"><i class="fas fa-user-shield mr-1"></i> Adicionar administrador</a>
                <% } %>
