  <header>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-main navbar-light">
        <a class="navbar-brand" href="/">
          <img src="/assets/images/logo-icon.png" class="img-fluid mr-2" />
          <%= PAGE_TITLE %>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menuMobile"
          aria-controls="menuMobile" aria-expanded="false" aria-label="Toggle navigation">
          <img src="/assets/images/menu.svg" onload="SVGInject(this)" class="img-fluid" />
        </button>
        <div class="collapse navbar-collapse" id="menuMobile">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item dropdown dropdown-menu-right">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown">
                <img src="/assets/images/avatar.gif" class="avatar img-fluid">
                <span class="username"><%= session.username %></span>
              </a>
              <div class="dropdown-menu">
                <% if(session.permissions.split(",").some((permission) => ["login_admin"].indexOf(permission) >= 0)){ %>
                  <a class="dropdown-item" href="/admin"><i class="far fa-hammer"></i> Painel Administrativo</a>
                <% } %>
                <a class="dropdown-item" href="/"><i class="far fa-cog"></i> Configurações</a>
                <hr class="dropdown-divider">
                <a class="dropdown-item logout" href="/logout"><i class="fas fa-power-off"></i> Sair</a>
              </div>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </header>